{
    "name": "ripe-sdk-components-react",
    "version": "0.0.1",
    "description": "RIPE SDK Components for React.js",
    "keywords": [
        "components",
        "ripe",
        "react"
    ],
    "homepage": "https://github.com/ripe-tech/ripe-sdk-components-react#readme",
    "bugs": {
        "url": "https://github.com/ripe-tech/ripe-sdk-components-react/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ripe-tech/ripe-sdk-components-react.git"
    },
    "license": "Apache-2.0",
    "author": "Platforme",
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack --mode production --config webpack.build.config.js",
        "build-dev": "cross-env NODE_ENV=development webpack --mode development --config webpack.build.config.js",
        "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js --mode development --watch --hot",
        "lint": "eslint \"./**/*.js\"",
        "lint-all": "npm run lint && npm run stylelint",
        "lint-fix": "eslint \"./**/*.js\" --fix",
        "prettier": "prettier \"./**/*.{js,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix && npm run stylelint-fix && npm run svgo",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "stylelint": "stylelint \"./**/*.{css,scss}\" --allow-empty-input",
        "stylelint-fix": "stylelint \"./**/*.{css,scss}\" --fix --allow-empty-input",
        "svgo": "svgo -r . --disable='removeDimensions,removeViewBox,minifyStyles'",
        "test": "mocha --recursive",
        "upgrade": "npx sort-package-json && ncu -u",
        "watch": "cross-env NODE_ENV=development webpack --config webpack.build.config.js --mode development --watch",
        "webpack": "webpack --config webpack.config.js"
    },
    "dependencies": {
        "@babel/runtime": "^7.10.4",
        "loaders.css": "^0.1.2",
        "mocha": "^8.0.1",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "ripe-sdk": "^1.11.5"
    },
    "devDependencies": {
        "@babel/core": "^7.10.4",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.10.4",
        "@babel/polyfill": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@storybook/addon-knobs": "^5.3.19",
        "@storybook/addon-storysource": "^5.3.19",
        "@storybook/source-loader": "^5.3.19",
        "@storybook/react": "^5.3.19",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "cross-env": "7.0.2",
        "css-loader": "^3.6.0",
        "eslint": "^7.4.0",
        "eslint-config-hive": "^0.3.3",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-react": "^7.20.3",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.3.0",
        "node-sass": "^4.14.1",
        "npm-check-updates": "^7.0.1",
        "prettier": "^2.0.5",
        "prettier-config-hive": "^0.1.7",
        "sass": "^1.26.10",
        "sass-loader": "^9.0.2",
        "sort-package-json": "^1.44.0",
        "style-loader": "^1.2.1",
        "stylelint": "^13.6.1",
        "stylelint-config-hive": "^0.1.7",
        "svgo": "^1.3.2",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "engines": {
        "node": ">=12"
    }
}
